<div class="centered-display">
  <div class="new-form">

    <h1>New hike for <%=@hiker.first_name%></h1>

    <form method="post" action="/hikers/<%=@hiker.id%>/new-hike">

      <div class="question-field">
        <div class="form-content">
          <div class="form-question">
          <label for="hiker-id">Hiker:</label>
          <select id="hiker-id" name="hiker_id">
            <option value="<%=@hiker.id%>"><%=@hiker.full_name%></option>
          </select>
        </div>

          <div class="form-question">
          <label for="munro-id">Munro:</label>
          <select id="munro-id" name="munro_id">
            <% for munro in @munros %>
            <option value="<%=munro.id%>"><%=munro.name%></option>
            <% end %>
          </select>
        </div>

          <div class="form-question">
            <p class="error"><%=@error if @error%></p>
          <label for="date">Date:</label>
          <input id ="date" type="date" name="date"/>
        </div>
        </div>
        <img class="form-img" src="/images/hike.png" alt="mountain icon">
      </div>
      <button class="submit-btn" type='submit'>Add hike</button>

    </form>
  </div>
</div>
